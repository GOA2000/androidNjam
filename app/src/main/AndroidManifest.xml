<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liquidsun.njamba" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MealsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SingleMealActivity"
            android:label="@string/title_activity_single_name" >
        </activity>
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleRestaurantActivity"
            android:label="@string/title_activity_single_restaurant" >
        </activity>
        <activity
            android:name=".ErrorLoading"
            android:label="@string/title_activity_error_loading" >
        </activity>
    </application>

</manifest>
